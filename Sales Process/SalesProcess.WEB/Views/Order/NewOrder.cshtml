
@{
    ViewBag.Title = "Place Order";
}

<style>
    .bootstrap-select button {
        border: 1px solid rgba(0,0,0,0.2) !important;
    }

    .dropdown.bootstrap-select.show-tick {
        width: 100% !important;
    }

    .dropdown-menu {
        min-width: 220px !important;
        width: 100% !important;
    }

    .order-selection-final {
        display: flex;
        align-content: center;
        justify-content: center;
    }

    .order-details {
        display: none;
    }
</style>
<script type="text/javascript" src="@Url.Content("~/Scripts/App/place-order.js")"></script>

<div class="card-material">
    <h5 class="page-title text-center">Place your order</h5>
    <hr />
    <div class="form-group row">
        <label for="Products" class="col-sm-2 col-form-label">Select Products:</label>
        <div class="col-sm-10">
            <select class="selectpicker" id="ddlProducts" multiple data-live-search="true"></select>
        </div>
    </div>
    <div class="form-group row">
        <label for="Buyers" class="col-sm-2 col-form-label">Select Buyers</label>
        <div class="col-sm-10">
            <select class="selectpicker" id="ddlBuyers" multiple data-live-search="true"></select>
        </div>
    </div>
    <div class="order-selection-final">
        <button class="btn btn-info" type="button" onclick="ProceedToNext()">Continue</button>
    </div>
</div>
<div id="OrderDetails">
    <div class="card-material order-details">
        <h5 class="text-center page-title">Order Summary</h5>
        <h5><strong>Products</strong></h5>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Sl.</th>
                        <th class="cell-min">Name</th>
                        <th class="text-center cell-min">Code</th>
                        <th class="text-center cell-min">Available Qty.</th>
                        <th class="text-center cell-min">Price (Per Pcs) BDT</th>
                        <th class="text-center cell-min">Order Qty</th>
                        <th class="text-center cell-min">Total Price (BDT)</th>
                        <th class="text-center"></th>
                    </tr>
                </thead>
                <tbody id="tblProducts"></tbody>
            </table>
        </div>
        <div class="total-order row">
            <div class="col-md-4 offset-md-8">
                <span>Order Total Amount:&emsp;<b id="GrandTotal">0</b>/=</span>
            </div>
        </div>
        <hr />
        <h5><strong>Buyers</strong></h5>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Sl.</th>
                        <th class="cell-min">Name</th>
                        <th>Code</th>
                        <th class="text-center cell-min">Region</th>
                        <th class="text-center cell-min">Payable (%)</th>
                        <th class="text-center cell-min">Payable Amount</th>
                        <th class="text-center"></th>
                    </tr>
                </thead>
                <tbody id="tblBuyers"></tbody>
            </table>
        </div>
        <div class="order-selection-final mt-3">
            <button type="button"
                    class="btn btn-info"
                    @*data-toggle="modal"
                data-target="#ConfirmOrderModal"*@
                    onclick="ConfirmOrderModal(event)">
                Checkout
            </button>
        </div>
    </div>
</div>
@Html.Partial("_ConfirmOrderModal")

