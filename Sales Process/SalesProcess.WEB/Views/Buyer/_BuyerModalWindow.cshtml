@* Modal Screen *@
<div class="modal fade" id="BuyersModal" tabindex="-1" role="dialog" aria-labelledby="BuyersModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="BuyersModalTitle">New Buyer</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <input type="hidden" id="BuyersId" />
                    <div class="form-group row">
                        <label for="buyersName" class="col-sm-4 col-form-label">Name</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="BuyersName" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="buyersCode" class="col-sm-4 col-form-label">Code</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="BuyersCode" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="buyersCode" class="col-sm-4 col-form-label">Region</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="BuyersRegion" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="buyersMobile" class="col-sm-4 col-form-label">Mobile</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="BuyersMobile" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="buyersEmail" class="col-sm-4 col-form-label">Email</label>
                        <div class="col-sm-8">
                            <input type="email" class="form-control" id="BuyersEmail" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success" id="AddUser" onclick="AddBuyer(event)">Save</button>
                <button type="button" class="btn btn-primary" id="UpdateUser" onclick="EditBuyer(event)">Update</button>
            </div>
        </div>
    </div>
</div>
